<style >
  body {
    background-image: url('<%= asset_path("demo-image-02.jpg") %>');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh; 
    background-color: #0a0b0c;
  }

</style >

<body>

<div>
  <div class= "text-center" style="padding-bottom: 20px;">
    <h1>
      My Fitness Goals
    </h1>
  </div>
</div>


 <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card py-4 h-100">
        <h2 style="color: #64a19d; padding-top: 10px;" class="text-center">Add a new goal</h2>
        <div class="card-body text-center">
          <form action="/insert_goal" method="post">

              

            <div class="row" style="padding-bottom: 20px;">
              <div class="col">
                <label for="goal_box">Goal</label>
                <textarea id="goal_box" name="query_goal" rows="3" class="form-control"></textarea>
              </div>
            </div>

            <div class="row" style="padding-bottom: 20px;">
              <div class="col">
                <label for="goal_due_date_box">Goal target date</label>
                <input type="date" id="goal_due_date_box" name="query_goal_due_date" class="form-control">
              </div>
            </div>

            <div class="row" style="padding-bottom: 20px;">
              <div class="col">
                <label for="main_goal_sport_box">Main goal sport</label>
                <input type="text" id="main_goal_sport_box" name="query_main_goal_sport" class="form-control">
              </div>
            </div>


            <div class="row" style="padding-top: 20px;">
              <div class="col">
                <button class="btn btn-pwd">Set Goal!</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



          </div>
        </div>
      </div>
    </div>

  </div>






<!--table starts-->
<hr>

<style>
  .table-container {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    margin: 0 auto; /* Center the container horizontally */
  }
</style>

<div style="text-align: center;">
  <div style="background-color: rgba(255, 255, 255, 0.9); padding: 20px; display: inline-block;">
    <table class="table" border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Goal
        </th>

        <th>
          Goal due date
        </th>

        <th>
          Goal status
        </th>

        <th>
          Main goal sport
        </th>

        <th>
          Goal outcome
        </th>

        <th>
          User
        </th>

        <th>
          Workouts count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_goals.each do |a_goal| %>
      <tr>
        <td>
          <%= a_goal.id %>
        </td>

        <td>
          <%= a_goal.goal %>
        </td>

        <td>
          <%= a_goal.goal_due_date %>
        </td>

        <td>
          <%= a_goal.goal_status %>
        </td>

        <td>
          <%= a_goal.main_goal_sport %>
        </td>

        <td>
          <%= a_goal.goal_outcome %>
        </td>

        <td>
          <%= a_goal.user_id %>
        </td>

        <td>
          <%= a_goal.workouts_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_goal.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_goal.updated_at) %> ago
        </td>

        <td>
          <a href="/goals/<%= a_goal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

</body>
