<style >
  body {
    background-image: url('<%= asset_path("main_picture.webp") %>');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh; 
    background-color: #0a0b0c;
  }

</style >

<div>
  <div>
    <h1>
      List of all workouts
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new workout
    </h2>

    <form action="/insert_workout" method="post">
      <div>
        <label for="workout_date_box">
          Workout date
        </label>

        <input type="date" id="workout_date_box" name="query_workout_date">
      </div>

      <div>
        <label for="duration_minutes_box">
          Duration minutes
        </label>

        <input type="text" id="duration_minutes_box" name="query_duration_minutes">
      </div>

      <div>
        <label for="equipment_box">
          Equipment
        </label>

        <input type="text" id="equipment_box" name="query_equipment">
      </div>

      <div>
        <label for="assignment_box">
          Assignment
        </label>

        <textarea id="assignment_box" name="query_assignment" rows="3"></textarea>
      </div>

      <div>
        <label for="workout_sport_box">
          Workout sport
        </label>

        <input type="text" id="workout_sport_box" name="query_workout_sport">
      </div>

      <div>
        <label for="workout_intensity_box">
          Workout intensity
        </label>

        <input type="text" id="workout_intensity_box" name="query_workout_intensity">
      </div>

      <div>
        <label for="completion_status_box">
          Completion status
        </label>

        <input type="text" id="completion_status_box" name="query_completion_status">
      </div>

      <div>
        <label for="workout_feelings_box">
          Workout feelings
        </label>

        <input type="text" id="workout_feelings_box" name="query_workout_feelings">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="goal_id_box">
          Goal
        </label>

        <input type="text" id="goal_id_box" name="query_goal_id">
      </div>

      <button>
        Create workout
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout date
        </th>

        <th>
          Duration minutes
        </th>

        <th>
          Equipment
        </th>

        <th>
          Assignment
        </th>

        <th>
          Workout sport
        </th>

        <th>
          Workout intensity
        </th>

        <th>
          Completion status
        </th>

        <th>
          Workout feelings
        </th>

        <th>
          User
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_workouts.each do |a_workout| %>
      <tr>
        <td>
          <%= a_workout.id %>
        </td>

        <td>
          <%= a_workout.workout_date %>
        </td>

        <td>
          <%= a_workout.duration_minutes %>
        </td>

        <td>
          <%= a_workout.equipment %>
        </td>

        <td>
          <%= a_workout.assignment %>
        </td>

        <td>
          <%= a_workout.workout_sport %>
        </td>

        <td>
          <%= a_workout.workout_intensity %>
        </td>

        <td>
          <%= a_workout.completion_status %>
        </td>

        <td>
          <%= a_workout.workout_feelings %>
        </td>

        <td>
          <%= a_workout.user_id %>
        </td>

        <td>
          <%= a_workout.goal_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_workout.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_workout.updated_at) %> ago
        </td>

        <td>
          <a href="/workouts/<%= a_workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
