<style >
  body {
    background-image: url('<%= asset_path("main_picture.webp") %>');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 100vh; 
    background-color: #0a0b0c;
  }

</style >

<div>
  <div class= "text-center" style="padding-bottom: 20px;">
    <h1>
      Plan a workout
    </h1>
  </div>
</div>


<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card py-4 h-100">
      <h2 style="color: #64a19d; padding-top: 10px;" class="text-center">Personalize</h2>
      <div class="card-body text-center">
        <form action="/insert_workout" method="post">

          <div class="row" style="padding-bottom: 20px;">
            <div class="col">
              <label for="workout_date_box">Workout date</label>
              <input type="date" id="workout_date_box" name="query_workout_date" class="form-control">
            </div>
          </div>

          <div class="row" style="padding-bottom: 20px;">
            <div class="col">
              <label for="duration_minutes_box">Desired duration minutes</label>
              <input type="text" id="duration_minutes_box" name="query_duration_minutes" class="form-control">
            </div>
          </div>

          <div class="row" style="padding-bottom: 20px;">
            <div class="col">
              <label for="equipment_box">Equipment</label>
              <input type="text" id="equipment_box" name="query_equipment" class="form-control">
            </div>
          </div>


          <div class="row" style="padding-bottom: 20px;">
            <div class="col">
              <label for="workout_sport_box">Workout sport</label>
              <input type="text" id="workout_sport_box" name="query_workout_sport" class="form-control">
            </div>
          </div>

          <div class="row" style="padding-bottom: 20px;">
            <div class="col">
              <label for="workout_intensity_box">Adjust workout intensity</label>
              <input type="text" id="workout_intensity_box" name="query_workout_intensity" class="form-control">
            </div>
          </div>


          <div class="row" style="padding-top: 20px;">
            <div class="col">
              <button class="btn btn-pwd">Create Workout</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>








<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout date
        </th>

        <th>
          Duration minutes
        </th>

        <th>
          Equipment
        </th>

        <th>
          Assignment
        </th>

        <th>
          Workout sport
        </th>

        <th>
          Workout intensity
        </th>

        <th>
          Completion status
        </th>

        <th>
          Workout feelings
        </th>

        <th>
          User
        </th>

        <th>
          Goal
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_workouts.each do |a_workout| %>
      <tr>
        <td>
          <%= a_workout.id %>
        </td>

        <td>
          <%= a_workout.workout_date %>
        </td>

        <td>
          <%= a_workout.duration_minutes %>
        </td>

        <td>
          <%= a_workout.equipment %>
        </td>

        <td>
          <%= a_workout.assignment %>
        </td>

        <td>
          <%= a_workout.workout_sport %>
        </td>

        <td>
          <%= a_workout.workout_intensity %>
        </td>

        <td>
          <%= a_workout.completion_status %>
        </td>

        <td>
          <%= a_workout.workout_feelings %>
        </td>

        <td>
          <%= a_workout.user_id %>
        </td>

        <td>
          <%= a_workout.goal_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_workout.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_workout.updated_at) %> ago
        </td>

        <td>
          <a href="/workouts/<%= a_workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
