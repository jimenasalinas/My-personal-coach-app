<div class="navbar" style="text-align: center; padding: 15px;">
    <a href="/" class="navbar-brand">My PersonAI Coach</a>

    <% if current_user != nil %>
        <a href="/goals" class="nav-link">My goals</a>
        
        <!-- Dropdown for My Workouts -->
        <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="myWorkoutsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                My workouts
            </a>
            <div class="dropdown-menu" aria-labelledby="myWorkoutsDropdown">
                <a class="dropdown-item" href="/workouts">Create a new workout</a>
                <a class="dropdown-item" href="/workouts/history">My workout history</a>
            </div>
        </div>

        <a href="/users/sign_out" class="nav-link">Sign out</a>
        <a href="/users/edit" class="nav-link">Edit profile</a>
    <% else %>
        <a href="/users/sign_up" class="nav-link">Sign up</a>
        <a href="/users/sign_in" class="nav-link">Sign in</a>
    <% end %>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>

<div class="container-fluid" style="padding: 15px;">
  <% if notice.present? %>
    <div style="color: #64a19d;">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div style="color: #a16468">
      <%= alert %>
    </div>
  <% end %>

  <%= yield %>
</div>
</body>

